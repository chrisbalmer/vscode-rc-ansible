{
    "name": "Ansible",
    "context": "..",
    "dockerFile": "Dockerfile",
    "extensions": [
        "ms-python.python",
        "vscoss.vscode-ansible",
        "mauve.terraform",
        "redhat.vscode-yaml"
    ],
    "settings": {
        "python.pythonPath": "/usr/bin/python3",
        "python.linting.pylintEnabled": true,
        "python.linting.enabled": true
    },
    "runArgs": [
        "-v", "${env:HOME}${env:USERPROFILE}/.ssh/:/root/.ssh/"
    ]
}
